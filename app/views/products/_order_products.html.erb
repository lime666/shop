<%= form_with url: products_path(@product), method: :get do |form| %>
  <div class='form-group'>
    <%= form.select :sort_by, [['Sort A-Z', 'title asc'], ['Sort Z-A', 'title desc'], ['Price Low to High', 'price asc'], ['Price High to Low', 'price desc']], { selected: params[:sort_by] || 'Sort A-Z' }, { onchange: 'this.form.submit();' } %>
    <hr>
  </div>
<% end %>

<%= form_with url: products_path(@product), method: :get do |form| %>
    <%= form.number_field :price_from, placeholder: 'Price from:' %>
    <%= form.number_field :price_to, placeholder: 'Price to:' %>
    <%= form.submit 'Show' %>
    <hr>
<% end %>
